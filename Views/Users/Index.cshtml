@using Microsoft.AspNetCore.Identity
@model IEnumerable<DocumentProcessing.Crk.ViewModels.UsersViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Last name
        </th>
        <th>
            Email
        </th>
        <th>
            Email confirmed
        </th>
        <th style="min-width: 200px">
            Roles
        </th>
        <th style="min-width: 200px">
            Permissions
        </th>
        <th>
            User name
        </th>       
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailConfirmed)
            </td>
            <td>
                @foreach(IdentityRole role in item.Roles)
                {
                    <p>@role.Name</p>
                }
            </td>

            <td>
                @Html.ActionLink("Edit", "EditRole", new { id = item.Id }) 
            </td>
        </tr>
    }

</table>
